<Page
    x:Class="GoFish.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:GoFish"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" Height="600" Width="594">

    <Grid>
        <Grid.Background>
            <ImageBrush Stretch="Fill" ImageSource="Assets/images/water.jpeg"></ImageBrush>
        </Grid.Background>
        <Button x:Name ="Play" Content="Play" Margin="0,230,0,0" HorizontalAlignment="Center" VerticalAlignment="Top" Height="75" Width="300" FontSize="45" Click="PlayBtn_Click"/>
        <Button x:Name ="HighScore" Content="High Score" HorizontalAlignment="Center" Height="75" Width="300" FontSize="45"  Margin="0,320,0,0" VerticalAlignment="Top" Click="HighScore_Click"/>
        <Button x:Name ="Settings" Content="Settings" Margin="0,410,0,0" HorizontalAlignment="Center" Height="75" Width="300" VerticalAlignment="Top" FontSize="45" Click="SettingBtn_Click"/>
        <Button x:Name ="About" Content="About" Margin="0,500,0,0" HorizontalAlignment="Center" Height="75" Width="300" VerticalAlignment="Top" FontSize="45" Click="AboutBtn_Click"/>
        <Image Margin="0,41,0,0" VerticalAlignment="Top" Width="300" Source="Assets/images/gofishlogo.png"/>
    </Grid>
</Page>
