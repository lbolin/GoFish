<Page
    x:Class="GoFish.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:GoFish"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Grid.Background>
            <ImageBrush Stretch="Fill" ImageSource="Assets/water.jpeg"></ImageBrush>
        </Grid.Background>
        <Button x:Name ="Play" Content="Play" Margin="0,314,0,0" HorizontalAlignment="Center" VerticalAlignment="Top" Height="160" Width="665" FontSize="70" Click="PlayBtn_Click"/>
        <Button x:Name ="Settings" Content="Settings" Margin="0,530,0,0" HorizontalAlignment="Center" Height="160" Width="665" VerticalAlignment="Top" FontSize="70" Click="SettingBtn_Click"/>
        <Button x:Name ="About" Content="About" Margin="0,752,0,0" HorizontalAlignment="Center" Height="160" Width="665" VerticalAlignment="Top" FontSize="70" Click="AboutBtn_Click"/>
        <Image Margin="0,41,0,0" VerticalAlignment="Top" Width="500" Source="Assets/gofishlogo.png"/>


    </Grid>
</Page>
