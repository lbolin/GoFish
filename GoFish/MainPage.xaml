<Page
    x:Class="GoFish.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:GoFish"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Grid.Background>
            <ImageBrush Stretch="Fill" ImageSource="Assets/images/water.jpeg"></ImageBrush>
        </Grid.Background>
        <Button x:Name ="Play" Content="Play" Margin="0,314,0,0" HorizontalAlignment="Center" VerticalAlignment="Top" Height="116" Width="665" FontSize="70" Click="PlayBtn_Click"/>
        <Button x:Name ="HighScore" Content="High Score" HorizontalAlignment="Center" Height="116" Width="665" FontSize="70"  Margin="0,466,0,0" VerticalAlignment="Top" Click="HighScore_Click"/>
        <Button x:Name ="Settings" Content="Settings" Margin="0,622,0,0" HorizontalAlignment="Center" Height="116" Width="665" VerticalAlignment="Top" FontSize="70" Click="SettingBtn_Click"/>
        <Button x:Name ="About" Content="About" Margin="0,784,0,0" HorizontalAlignment="Center" Height="116" Width="665" VerticalAlignment="Top" FontSize="70" Click="AboutBtn_Click"/>
        <Image Margin="0,41,0,0" VerticalAlignment="Top" Width="500" Source="Assets/images/gofishlogo.png"/>


    </Grid>
</Page>
